<h1><%= @doctor.name %></h1>
<h2><%= @doctor.department %></h2>

<h3>Appointments</h3>
<% @doctor.appointments.each do |appointment| %>
    <%= appointment.appointment_datetime.strftime("%B %e, %Y") %> at <%= appointment.appointment_datetime.strftime("%R") %> - <%= link_to appointment.patient.name, patient_path(appointment.patient) %><br>
<% end %>
